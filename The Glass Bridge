-- Intentar cargar la librería Rayfield desde sirius.menu
local success, Rayfield = pcall(function()
    return loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
end)

-- Verificar si Rayfield se cargó correctamente
if not success or not Rayfield then
    warn("No se pudo cargar Rayfield desde https://sirius.menu/rayfield. Usando script sin interfaz gráfica.")
    -- Script sin interfaz gráfica
    for _, step in pairs(workspace:GetChildren()) do
        if step.Name == "Step" and step:IsA("Model") then
            -- Colorear glass_tempered de verde
            local glassTempered = step:FindFirstChild("glass_tempered")
            if glassTempered then
                for _, part in pairs(glassTempered:GetDescendants()) do
                    if part:IsA("BasePart") then
                        part.BrickColor = BrickColor.new("Lime green")
                    end
                end
            end
            -- Colorear glass_weak de rojo
            local glassWeak = step:FindFirstChild("glass_weak")
            if glassWeak then
                for _, part in pairs(glassWeak:GetDescendants()) do
                    if part:IsA("BasePart") then
                        part.BrickColor = BrickColor.new("Really red")
                    end
                end
            end
        end
    end
    print("Coloreado completado: glass_tempered (verde), glass_weak (rojo).")
else
    -- Crear la ventana de la interfaz si Rayfield se cargó correctamente
    local Window = Rayfield:CreateWindow({
        Name = "Colorear Vidrios",
        LoadingTitle = "Interfaz de Control",
        LoadingSubtitle = "by TuNombre",
        ConfigurationSaving = {
            Enabled = true,
            FolderName = nil,
            FileName = "ColorearVidrios"
        }
    })

    -- Crear una pestaña
    local Tab = Window:CreateTab("Colorear", 4483362458)

    -- Función para colorear glass_tempered de verde
    local function colorearTempered()
        for _, step in pairs(workspace:GetChildren()) do
            if step.Name == "Step" and step:IsA("Model") then
                local glassTempered = step:FindFirstChild("glass_tempered")
                if glassTempered then
                    for _, part in pairs(glassTempered:GetDescendants()) do
                        if part:IsA("BasePart") then
                            part.BrickColor = BrickColor.new("Lime green")
                        end
                    end
                end
            end
        end
        Rayfield:Notify({
            Title = "Éxito",
            Content = "Todos los glass_tempered han sido coloreados de verde.",
            Duration = 3,
            Image = 4483362458
        })
    end

    -- Función para colorear glass_weak de rojo
    local function colorearWeak()
        for _, step in pairs(workspace:GetChildren()) do
            if step.Name == "Step" and step:IsA("Model") then
                local glassWeak = step:FindFirstChild("glass_weak")
                if glassWeak then
                    for _, part in pairs(glassWeak:GetDescendants()) do
                        if part:IsA("BasePart") then
                            part.BrickColor = BrickColor.new("Really red")
                        end
                    end
                end
            end
        end
        Rayfield:Notify({
            Title = "Éxito",
            Content = "Todos los glass_weak han sido coloreados de rojo.",
            Duration = 3,
            Image = 4483362458
        })
    end

    -- Botón para colorear glass_tempered
    Tab:CreateButton({
        Name = "Colorear glass_tempered de Verde",
        Callback = function()
            colorearTempered()
        end
    })

    -- Botón para colorear glass_weak
    Tab:CreateButton({
        Name = "Colorear glass_weak de Rojo",
        Callback = function()
            colorearWeak()
        end
    })
end
